
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form method="post">
    <input type="hidden" name="Id" value="@Model.id" class="form form-control" />
    <input type="text" name="Name" placeholder="Name" value="@Model.name" class="form form-control" />
    <span class="border-info">CGPA:@Model.cgpa</span>
    <input type="submit" value="Create" class="btn btn-success" />
</form>

