
@{
    ViewBag.Title = "list";
}

<h2>list</h2>



@if (TempData["Msg"] != null)
{
    <span class="alert alert-info">@TempData["Msg"]</span>
}
@if (Model.Count == 0)
{
    <h3>No Data</h3>
}
else
{
    <table class="table table-bordered">
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>CGPA</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.cgpa</td>
                <td>
                <a href="/Student/Details/@item.id" class="btn btn-primary">Details</a>
                <a href="/Student/Edit/@item.id" class="btn btn-primary">Edit</a>
                <a href="/Student/Delete/@item.id" class="btn btn-primary">Delete</a>
                    </td>
            </tr>
            
        }
    </table>
}
